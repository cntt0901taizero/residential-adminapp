<odoo>
    <record id="view_tb_paybill_configrender_tree" model="ir.ui.view">
        <field name="name">tb_paybill_configrender.tree</field>
        <field name="model">tb_paybill_configrender</field>
        <field name="arch" type="xml">
            <tree>
                <field name="fee_kind_code"></field>
                <field name="block_house_code"></field>
                <field name="building_code"></field>
                <field name="house_code"></field>
                <field name="price"></field>
                <field name="is_active"></field>
            </tree>
        </field>
    </record>

    <record id="view_tb_paybill_configrender_form" model="ir.ui.view">
        <field name="name">tb_paybill_configrender.form</field>
        <field name="model">tb_paybill_configrender</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="fee_kind_code"></field>
                        <field name="fee_kind_name"></field>
                        <field name="block_house_code"></field>
                        <field name="block_house_name"></field>
                        <field name="building_code"></field>
                        <field name="building_name"></field>
                        <field name="house_code"></field>
                        <field name="house_number"></field>
                        <field name="price"></field>
                        <field name="is_active"></field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_tb_paybill_configrender_search">
        <field name="name">tb_paybill_configrender.search</field>
        <field name="model">tb_paybill_configrender</field>
        <field name="arch" type="xml">
            <search>
                <field name="fee_kind_code" string="Mã loại phí"></field>
                <field name="fee_kind_name" string="Tên loại phí"></field>
                <field name="block_house_code" string="Mã khối nhà"></field>
                <field name="block_house_name" string="Tên khối nhà"></field>
                <field name="building_code" string="Mã Tòa nhà"></field>
                <field name="building_name" string="Tên tòa nhà"></field>
                <field name="house_code" string="Mã căn hộ"></field>
                <field name="house_number" string="Số nhà"></field>
                <field name="price" string="Giá thanh toán"></field>
                <field name="is_active" string="Trạng thái"></field>
            </search>
        </field>
    </record>

    <record id="action_tb_paybill_configrender" model="ir.actions.act_window">
        <field name="name">Cấu hình thanh toán phí</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">tb_paybill_configrender</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Thêm mới</p>
        </field>
    </record>

    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="menu_tb_paybill_configrender"
              name="Cấu hình thanh toán phí"
              parent="menu_apartment_pay_bill_root"
              action="action_tb_paybill_configrender"
              sequence="1"/>
</odoo>