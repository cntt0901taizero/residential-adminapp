<odoo>
    <record id="view_tb_vehicle_tree" model="ir.ui.view">
        <field name="name">tb_vehicle.tree</field>
        <field name="model">tb_vehicle</field>
        <field name="arch" type="xml">
            <tree string="Bảng quản lý phương tiện" decoration-danger="is_active == False">
                <field name="name" optional="show"/>
                <field name="vehicle_type" optional="show"/>
                <field name="note" optional="show"/>
                <field name="blockhouse_id" optional="show"/>
                <field name="building_id" optional="show"/>
                <field name="building_house_id" optional="show"/>
                <field name="is_active" optional="show"/>
                <button groups="resident_management.group_administration, resident_management.group_management"
                        name="open_edit_form" class="btn btn-light" title="Sửa" type="object" icon="fa-pencil"/>
                <button groups="resident_management.group_administration, resident_management.group_management"
                        name="confirm_delete" class="btn btn-danger" title="Xóa" type="object" icon="fa-trash-o"/>
            </tree>
        </field>
    </record>

    <record id="view_tb_vehicle_form" model="ir.ui.view">
        <field name="name">tb_vehicle.form</field>
        <field name="model">tb_vehicle</field>
        <field name="arch" type="xml">
            <form create="false">
                <sheet>
                    <group string="Thông tin cơ bản phương tiện">
                        <field string="Ảnh thực tế" name="image"
                               height="400px" widget="image"
                               class="oe_left oe_avatar"/>
                        <field name="name"/>
                        <field name="vehicle_type" widget="selection_badge"/>
                        <field name="note"/>
                        <field name="is_active"/>
                    </group>
                    <group string="Thông tin sở hữu thuộc">
                        <field name="blockhouse_id"
                               options="{'no_create_edit': True, 'no_create': True, 'no_open': True}"/>
                        <field name="building_id"
                               options="{'no_create_edit': True, 'no_create': True, 'no_open': True}"/>
                        <field name="building_house_id"
                               options="{'no_create_edit': True, 'no_create': True, 'no_open': True}"/>
                        <field name="user_id" widget="many2one_avatar_user"
                               options="{'no_create_edit': True, 'no_create': True, 'no_open': True}"/>
                    </group>

                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_tb_vehicle_search">
        <field name="name">tb_vehicle.search</field>
        <field name="model">tb_vehicle</field>
        <field name="arch" type="xml">
            <search>
                <filter name="is_active" string="Trạng thái active" domain="[('is_active', '=', 'True')]"/>
                <group expand="1" string="Group By">
                    <filter name="group_block_house" string="dự án" context="{'group_by': 'blockhouse_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_tb_vehicle" model="ir.actions.act_window">
        <field name="name">Quản lý phương tiện</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">tb_vehicle</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_group_block_house':1}</field>
        <field name="limit">10</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Thêm mới!</p>
        </field>
    </record>

    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="menu_tb_vehicle"
              name="Phương tiện"
              parent="menu_parking_and_vehicle"
              action="action_tb_vehicle"
              sequence="1"/>
</odoo>
