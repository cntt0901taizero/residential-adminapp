<odoo>
    <record id="view_tb_building_floors_tree" model="ir.ui.view">
        <field name="name">tb_building_floors.tree</field>
        <field name="model">tb_building_floors</field>
        <field name="arch" type="xml">
            <tree default_order="sort" decoration-danger="is_active == False"
                  editable="bottom" create="0" delete="0" multi_edit="1">
                <field name="sort" widget="handle" optional="show"/>
                <field name="name" optional="show"/>
                <field name="floors_type" optional="show"/>
                <field name="total_house" optional="show"/>
                <field name="building_id" optional="show"
                       options="{'no_create_edit': True, 'no_create': True, 'no_open': True}"/>
                <field name="blockhouse_id" optional="show"
                       options="{'no_create_edit': True, 'no_create': True, 'no_open': True}"/>
                <field name="is_active" optional="show"/>
                <button groups="resident_management.group_administration, resident_management.group_management"
                        name="open_edit_form" class="btn btn-light" title="Sửa" type="object" icon="fa-pencil"/>
                <button groups="resident_management.group_administration, resident_management.group_management"
                        name="confirm_delete" class="btn btn-danger" title="Xóa" type="object" icon="fa-trash-o"/>
<!--                widget="boolean_toggle"-->
            </tree>
        </field>
    </record>

    <record id="view_tb_building_floors_form" model="ir.ui.view">
        <field name="name">tb_building_floors.form</field>
        <field name="model">tb_building_floors</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="id" invisible="1"/>
                        <field name="name"/>
                        <field name="sort"/>
                        <field name="floors_type" widget="selection_badge"/>
                        <field name="total_house"/>
                        <field name="building_id" attrs="{'readonly':[('building_id','>',0)]}" options="{'no_open': True}"/>
                        <field name="blockhouse_id" attrs="{'readonly':[('blockhouse_id','>',0)]}" options="{'no_open': True}"/>
                        <field name="is_active"/>
                    </group>
                    <notebook>
                        <page string="Căn hộ">
                            <button string=" Thêm mới Căn hộ" class="fa fa-plus btn btn-info mb-2"
                                    disabled="True" attrs="{'invisible':[('id','>',0)]}"
                                    title="Cần lưu tầng sàn trước khi thêm mới căn hộ"/>
                            <button name="create_building_house" string=" Thêm mới Căn hộ"
                                    class="fa fa-plus btn btn-info mb-2" type="object"
                                    attrs="{'invisible':[('id','=',False)]}"/>
                            <field name="building_house_ids" widget="one2many" mode="tree,kanban"
                                   decoration-danger="is_active == False">
                                <tree string="Bảng căn hộ" default_order="name" create="false">
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="address"/>
                                    <field name="building_floors_id" widget="badge"/>
                                    <field name="building_id" widget="badge"/>
                                    <field name="blockhouse_id" widget="badge"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_tb_building_floors_search">
        <field name="name">tb_building_floors.search</field>
        <field name="model">tb_building_floors</field>
        <field name="arch" type="xml">
            <search>
            </search>
        </field>
    </record>

    <record id="action_tb_building_floors" model="ir.actions.act_window">
        <field name="name">Quản lý căn hộ</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">tb_building_floors</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="limit">10</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Thêm mới căn hộ!</p>
        </field>
    </record>

     <menuitem id="menu_building_floors"
              name="Khai báo Tầng"
              parent="menu_apartment_project_root"
              action="action_tb_building_floors"
              sequence="3"/>

</odoo>
