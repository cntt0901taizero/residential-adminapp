<odoo>
    <record id="view_tb_building_floors_tree" model="ir.ui.view">
        <field name="name">tb_building_floors.tree</field>
        <field name="model">tb_building_floors</field>
        <field name="arch" type="xml">
            <tree decoration-danger="is_active == False">
                <field name="name" optional="show"/>
                <field name="sort" optional="show"/>
                <field name="floors_type" optional="show"/>
                <field name="total_house" optional="show"/>
                <field name="building_id" widget="badge" optional="show"/>
                <field name="blockhouse_id" widget="badge" optional="show"/>
                <field name="is_active" widget="boolean_toggle" optional="show"/>
            </tree>
        </field>
    </record>

    <record id="view_tb_building_floors_form" model="ir.ui.view">
        <field name="name">tb_building_floors.form</field>
        <field name="model">tb_building_floors</field>
        <field name="arch" type="xml">
            <form create="false">
                <sheet>
                    <group>
                        <field name="id" invisible="1"/>
                        <field name="name"/>
                        <field name="sort"/>
                        <field name="floors_type" widget="selection_badge"/>
                        <field name="total_house"/>
                        <field name="building_id" attrs="{'readonly':[('building_id','>',0)]}"/>
                        <field name="blockhouse_id" attrs="{'readonly':[('blockhouse_id','>',0)]}"/>
                        <field name="is_active" widget="boolean_toggle"/>
                    </group>
                    <notebook>
                        <page string="Căn hộ">
                            <button string=" Thêm mới Căn hộ" class="fa fa-plus btn btn-info mb-2"
                                    disabled="True" attrs="{'invisible':[('id','>',0)]}"
                                    title="Cần lưu tầng sàn trước khi thêm mới căn hộ"/>
                            <button name="create_building_house" string=" Thêm mới Căn hộ"
                                    class="fa fa-plus btn btn-info mb-2" type="object"
                                    attrs="{'invisible':[('id','=',False)]}"/>
                            <field name="building_house_ids" widget="one2many" mode="tree,kanban"
                                   decoration-danger="is_active == False">
                                <tree string="Bảng căn hộ" default_order="name" create="false">
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="address"/>
                                    <field name="building_floors_id" widget="badge"/>
                                    <field name="building_id" widget="badge"/>
                                    <field name="blockhouse_id" widget="badge"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_tb_building_floors_search">
        <field name="name">tb_building_floors.search</field>
        <field name="model">tb_building_floors</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Số nhà"/>
            </search>
        </field>
    </record>

    <record id="action_tb_building_floors" model="ir.actions.act_window">
        <field name="name">Quản lý căn hộ</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">tb_building_floors</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="limit">10</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Thêm mới căn hộ!</p>
        </field>
    </record>

