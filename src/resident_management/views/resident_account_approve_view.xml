<odoo>

    <record id="view_resident_users_approve_tree" model="ir.ui.view">
        <field name="name">res.resident.users.approve.tree</field>
        <field name="model">res.users</field>
        <field name="arch" type="xml">
            <tree string="Users" js_class="tree_action_resident_user" create="0">
                <header>
                    <button class="fa fa-check btn btn-info" type="object"
                            name="set_status_active" string=" Phê duyệt và gửi thư mời"/>
                </header>
                <field name="row_number" string="STT" optional="show"/>
                <field name="name" string="HỌ TÊN"/>
                <field name="login" string="TÊN ĐĂNG NHẬP"/>
                <field name="email" string="EMAIL"/>
                <field name="phone" string="ĐIỆN THOẠI"/>
                <field name="citizen_identification" string="CCCD"/>
                <field name="lang" string="NGÔN NGỮ"/>
                <field name="login_date" string="NGÀY ĐĂNG NHẬP"/>
                <field name="create_date" string="NGÀY TẠO"/>
<!--                <field name="company_id" groups="base.group_multi_company"/>-->
                <button groups="resident_management.group_administration, resident_management.group_management, base.group_erp_manager"
                        name="open_edit_resident_approve_form" class="btn btn-light" title="Sửa" type="object" icon="fa-pencil"/>
                <button groups="resident_management.group_administration, resident_management.group_management, base.group_erp_manager"
                        name="confirm_resident_delete" class="btn btn-danger" title="Xóa" type="object" icon="fa-trash-o"/>
            </tree>
        </field>
    </record>

    <record id="view_resident_users_approve_form_inherit" model="ir.ui.view">
        <field name="name">res.users.resident.form.inherit</field>
        <field name="model">res.users</field>
        <field name="arch" type="xml">
            <form string="Users" js_class="form_action_resident_user">
                <field name="id" invisible="1"/>
                <field name="status" invisible="1"/>
                <header attrs="{'invisible':[('id','=',False)]}">
                    <button class="fa fa-check btn btn-info"
                            attrs="{'invisible':[('status','=','ACTIVE')]}"
                            name="set_status_active" string=" Phê duyệt và gửi thư mời" type="object"
                    />
                    <button class="fa fa-times btn btn-warning"
                            name="set_status_reject" string=" Từ chối duyệt" type="object"
                            attrs="{'invisible':[('status','=','REJECT')]}"/>
                    <field name="status" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="row">
                        <div class="col-md-12">
                            <group>
                                <field name="image_1920" widget='image' class="oe_left oe_avatar"
                                       options='{"preview_image": "avatar_128"}'/>
                            </group>
                        </div>
                        <div class="col-md-4">
                            <group>
                                <field name="login" required="1" string="Tên đăng nhập *"/>
                            </group>
                        </div>
                        <div class="col-md-4" attrs="{'invisible': [('id','>', 0)]}">
                            <group>
                                <field name="password" attrs="{'required': [('id','=', False)]}"
                                       password="1" string="Mật khẩu *"/>
                            </group>
                        </div>
                        <div class="col-md-4">
                            <group>
                                <field name="name" required="1" string="Họ tên *"/>
                            </group>
                        </div>
                        <div class="col-md-4">
                            <group>
                                <field name="gender"/>
                            </group>
                        </div>
                        <div class="col-md-4">
                            <group>
                                <field name="citizen_identification" required="1" string="CMND / CCCD *"/>
                            </group>
                        </div>
                        <div class="col-md-4">
                            <group>
                                <field name="date_of_birth"/>
                            </group>
                        </div>
                        <div class="col-md-4">
                            <group>
                                <field name="email" required="1" string="Email *"/>
                            </group>
                        </div>
                        <div class="col-md-4">
                            <group>
                                <field name="phone"/>
                            </group>
                        </div>
                        <div class="col-md-12" attrs="{'invisible': [('id','=', False)]}">
                            <group>
                                <field name="active"/>
                            </group>
                        </div>
                    </div>
                    <notebook attrs="{'invisible': [('id','=', False)]}">
                        <page string="Nhóm quyền dự án">
                            <button string=" Thêm nhóm quyền" class="fa fa-plus btn btn-primary mb-2"
                                    disabled="True" attrs="{'invisible':[('id','>',0)]}"
                                    data-toggle="tooltip"
                                    title="Cần lưu thông tin tài khoản trước khi thêm mới nhóm quyền cho tài khoản"/>
                            <button name="create_user_blockhouse_groups_rel" string=" Thêm nhóm quyền"
                                    class="fa fa-plus btn btn-primary mb-2" type="object"
                                    attrs="{'invisible':[('id','=',False)]}"/>

                            <field name="tb_users_blockhouse_res_groups_rel_ids" widget="one2many" mode="tree">
                                <tree string="Quản lý tài khoản" editable="bottom" create="0" delete="0" multi_edit="1">
                                    <field name="group_id" optional="show"
                                           options="{'no_create_edit': True, 'no_create': True, 'no_open': True}"/>
                                    <field name="blockhouse_id" optional="show"
                                           options="{'no_create_edit': True, 'no_create': True, 'no_open': True}"/>
                                    <field name="building_id" optional="show"
                                           options="{'no_create_edit': True, 'no_create': True, 'no_open': True}"/>
                                    <field name="building_floors_id"
                                           options="{'no_create_edit': True, 'no_create': True, 'no_open': True}"/>
                                    <field name="building_house_id" optional="show"
                                           options="{'no_create_edit': True, 'no_create': True, 'no_open': True}"/>
                                    <field name="relationship_type" optional="show"/>

                                    <button groups="resident_management.group_administration, resident_management.group_management, base.group_erp_manager"
                                            name="open_edit_form" class="btn btn-light" title="Sửa" type="object"
                                            icon="fa-pencil"/>
                                    <button groups="resident_management.group_administration, resident_management.group_management, base.group_erp_manager"
                                            name="confirm_delete" class="btn btn-danger" title="Xóa" type="object"
                                            icon="fa-trash-o"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_resident_users_approve_search" model="ir.ui.view">
        <field name="name">resident_users_approve.search</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_search"/>
        <field name="arch" type="xml">
            <search>
                <separator/>
                <filter name="status_pending" string="Trạng thái chờ" domain="[('status', '=', 'PENDING')]"/>
                <filter name="status_active" string="Trạng thái đã duyệt" domain="[('status', '=', 'ACTIVE')]"/>
                <filter name="status_reject" string="Trạng thái bị từ chối" domain="[('status', '=', 'REJECT')]"/>
                <separator/>
                <field string="Dự án" name="tb_users_blockhouse_res_groups_rel_ids"
                       filter_domain="[('tb_users_blockhouse_res_groups_rel_ids.blockhouse_id','ilike', self)]"/>
                <field string="Khu / Tòa nhà" name="tb_users_blockhouse_res_groups_rel_ids"
                       filter_domain="[('tb_users_blockhouse_res_groups_rel_ids.building_id','ilike', self)]"/>
                <field string="Căn hộ / biệt thự" name="tb_users_blockhouse_res_groups_rel_ids"
                       filter_domain="[('tb_users_blockhouse_res_groups_rel_ids.building_house_id','ilike', self)]"/>
                <separator/>
            </search>
        </field>
    </record>

    <record id="action_account_resident_approve" model="ir.actions.act_window">
        <field name="name">DUYỆT TÀI KHOẢN CƯ DÂN</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.users</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('view_resident_users_approve_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('view_resident_users_approve_form_inherit')})]"
        />
        <field name="domain">[('user_type', '=', 'RESIDENT')]</field>
        <field name="limit">10</field>
        <field name="context">
            {'default_user_type': 'RESIDENT', 'install_mode': True}
        </field>
<!--        'search_default_status_pending': 1, -->
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Chưa có bản ghi nào!</p>
        </field>
    </record>

    <record id="menu_approve_account_resident" model="ir.ui.menu">
        <field name="name">Duyệt tài khoản cư dân</field>
        <field name="action" ref="action_account_resident_approve"/>
        <field name="parent_id" ref="menu_account_resident"/>
        <field name="sequence">2</field>
    </record>


</odoo>
