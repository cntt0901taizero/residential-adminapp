<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_tb_users_blockhouse_res_groups_rel_tree" model="ir.ui.view">
        <field name="name">tb_users_blockhouse_res_groups_rel.tree</field>
        <field name="model">tb_users_blockhouse_res_groups_rel</field>
        <field name="arch" type="xml">
            <tree editable="bottom" create="0" delete="0" multi_edit="1">
                <field name="group_id" optional="show" options="{'no_open': True}"/>
                <field name="blockhouse_id" optional="show" options="{'no_open': True}"/>
                <field name="building_id" optional="show" options="{'no_open': True}"/>
                <field name="building_house_id" optional="show" options="{'no_open': True}"/>
                <field name="relationship_type" optional="show"/>

                <button groups="resident_management.group_administration, resident_management.group_management"
                        name="open_edit_form" class="btn btn-light" title="Sửa" type="object" icon="fa-pencil"/>
                <button groups="resident_management.group_administration, resident_management.group_management"
                        name="confirm_delete" class="btn btn-danger" title="Xóa" type="object" icon="fa-trash-o"/>
            </tree>
        </field>
    </record>

    <record id="view_tb_users_blockhouse_res_groups_rel_form" model="ir.ui.view">
        <field name="name">tb_users_blockhouse_res_groups_rel.form</field>
        <field name="model">tb_users_blockhouse_res_groups_rel</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="selected_group" invisible="1"/>
                        <field name="user_id" readonly="1" force_save="1" options="{'no_open': True}"/>
                    </group>
                    <group>
                        <field name="group_id" options="{'no_open': True}"/>
                    </group>
                    <group>
                        <field name="blockhouse_id" attrs="{'required': True}" options="{'no_open': True}"/>
                        <field name="building_id" attrs="{'required': True}" options="{'no_open': True}"/>
                        <field name="building_house_id" options="{'no_open': True}"
                               attrs="{'invisible': [('selected_group','!=', '[CD] Cư dân')], 'required': [('selected_group','=', '[CD] Cư dân')]}"/>
                        <field name="relationship_type"
                               attrs="{'invisible': [('selected_group','!=', '[CD] Cư dân')], 'required': [('selected_group','=', '[CD] Cư dân')]}"/>
                        <field name="user_group_code" invisible="1"/>
                        <field name="owner" invisible="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="action_tb_users_blockhouse_res_groups_rel" model="ir.actions.act_window">
        <field name="name">Thêm nhóm người dùng</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">tb_users_blockhouse_res_groups_rel</field>
        <field name="view_mode">tree, form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Tạo bản ghi đầu tiên của bạn</p>
        </field>
    </record>

</odoo>

