<odoo>
    <record id="view_tb_notification_tree" model="ir.ui.view">
        <field name="name">tb_notification.tree</field>
        <field name="model">tb_notification</field>

        <field name="arch" type="xml">
            <tree>
                <field name="name"></field>
                <field name="content"></field>
                <field name="type"></field>
                <field name="state"></field>
            </tree>
        </field>
    </record>

    <record id="view_tb_notification_form" model="ir.ui.view">
        <field name="name">tb_notification.form</field>
        <field name="model">tb_notification</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button
                            icon="fa-check"
                            class="oe_highlight"
                            states="PENDING"
                            name="set_status_active" string="Phê duyệt" type="object"
                            groups="resident_management.group_administration"
                    />
                    <button
                            icon="fa-times"
                            name="set_status_reject" string="Từ chối duyệt" type="object" states="PENDING, ACTIVE"
                            groups="resident_management.group_administration"/>
                    <field name="state" widget="statusbar"
                           groups="resident_management.group_administration, resident_management.group_management"/>
                </header>
                <sheet>
                     <div class="oe_title pr-0">
                        <h1 class="d-flex flex-row justify-content-between">
                            <field name="name" class="o_task_name text-truncate" placeholder="Tiêu đề thông báo..." default_focus="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="user_ids" widget="many2many_tags"></field>
                        </group>
                    </group>
<!--                    <group colspan="4">-->
<!--                        <field type="html" widget="html" name="content" class="oe_account_terms"-->
<!--                               placeholder="Nội dung thông báo..." modifiers="{}"/>-->
<!--                    </group>-->
                     <notebook>
                        <page name="description_page" string="Nội dung">
                            <field name="content" type="html" options="{'collaborative': true}" placeholder="Nội dung thông báo..."/>
                        </page>
                     </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_tb_notification_search">
        <field name="name">tb_notification.search</field>
        <field name="model">tb_notification</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Tiêu đề"></field>
            </search>
        </field>
    </record>

    <record id="action_tb_notification" model="ir.actions.act_window">
        <field name="name">Thông báo</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">tb_notification</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="domain">[('type','=','ACTIVE_BY_ADMIN')]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Thêm mới thông báo!</p>
        </field>
    </record>

    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="menu_tb_notification"
              name="Thông báo"
              parent="menu_resident_root"
              action="action_tb_notification"
              sequence="0"/>
</odoo>
