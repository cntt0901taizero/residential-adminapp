<odoo>
    <record id="view_tb_building_tree" model="ir.ui.view">
        <field name="name">tb_building.tree</field>
        <field name="model">tb_building</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
                <field name="total_floors"/>
                <field name="founding_date" widget="date"/>
                <field name="website"/>
                <field name="phone"/>
                <field name="image" width="100px" widget="image" class="oe_left oe_avatar"/>
                <field name="address"/>
                <field name="location_link"/>
                <field name="blockhouse_id"/>
<!--                <field name="is_active" widget="boolean_toggle"/>-->
            </tree>
        </field>
    </record>
    
    <record id="view_tb_building_kanban" model="ir.ui.view">
        <field name="name">tb_building.kanban</field>
        <field name="model">tb_building</field>
        <field name="arch" type="xml">
            <kanban records_draggable="0" quick_create="false">
                <field name="id"/>
                <field name="name"/>
                <field name="code"/>
                <field name="total_floors"/>
                <field name="founding_date"/>
                <field name="website"/>
                <field name="image"/>
                <field name="address"/>
                <field name="location_link"/>
                <field name="blockhouse_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('tb_building', 'image', record.id.raw_value)"
                                     alt="Tòa nhà" class="o_image_64_contain"/>
                            </div>
                            <div class="oe_kanban_details">
                                <div class="o_kanban_record_top mb-0">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <t t-esc="record.name.value"/>
                                        </strong>
                                    </div>
                                </div>
                                <div name="product_lst_price" class="mt-1">
                                    <span>Thành lập ngày:
                                        <field name="founding_date" widget="date"/>
                                    </span>
                                </div>
                                <div name="product_lst_price" class="mt-1">
                                    <span>Website:
                                        <field name="website"/>
                                    </span>
                                </div>
                                <div name="product_lst_price" class="mt-1">
                                    <span>
                                        <field name="is_active" widget="boolean_toggle"/>
                                    </span>
                                </div>
<!--                                <div class="o_kanban_record_bottom">-->
<!--                                    <div class="oe_kanban_bottom_left">-->
<!--                                        <field name="website" widget="date"/>-->
<!--                                    </div>-->
<!--                                    <div class="oe_kanban_bottom_right"></div>-->
<!--                                </div>-->
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_tb_building_form" model="ir.ui.view">
        <field name="name">tb_building.form</field>
        <field name="model">tb_building</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>Ảnh đại diện tòa nhà</h1>
                        <field name="image" height="400px" widget="image" class="oe_left oe_avatar"/>
                    </div>
                    <group>
                        <field name="code"/>
                        <field name="name"/>
                        <field name="total_floors"/>
                        <field name="founding_date" widget="date"/>
                        <field name="website"/>
                        <field name="phone"/>

                        <field name="location_link"/>
                        <field name="address" widget="text"/>
                        <field name="blockhouse_id" widget="selection"/>
                        <field name="is_active" widget="boolean_toggle"/>
                    </group>

                    <notebook>
                        <page string="Tầng sàn">
                            <field name="building_floors_id" widget="one2many" mode="tree,kanban">
                                <tree>
                                    <field name="sort"/>
                                    <field name="name"/>
                                    <field name="total_house"/>
                                    <field name="is_active"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Căn hộ">
                            <field name="building_house_id" widget="one2many" mode="tree,kanban">
                                <tree>
                                    <field name="code"/>
                                    <field name="name"/>
                                    <field name="address"/>
                                    <field name="owner"/>
                                    <field name="building_floors_id"/>
                                    <field name="building_id"/>
                                    <field name="blockhouse_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
<!--                <div class="oe_chatter">-->
<!--                    <field name="name"/>-->
<!--                    <field name="code"/>-->
<!--                </div>-->
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_tb_building_search">
        <field name="name">tb_building.search</field>
        <field name="model">tb_building</field>
        <field name="arch" type="xml">
            <search>
                <filter name="name" string="Tên toà nhà"/>
                <filter name="filter_is_active" string="Trạng thái" domain="[('is_active', '=', 'True')]"/>
                <group expand="1" string="Group By">
                    <filter name="group_block_house" string="Khối nhà" context="{'group_by': 'blockhouse_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_tb_building" model="ir.actions.act_window">
        <field name="name">Quản lý toà nhà</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">tb_building</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_group_block_house':1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Thêm mới toà nhà!</p>
        </field>
    </record>

    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="menu_tb_building"
              name="Toà nhà"
              parent="menu_blockhouse"
              action="action_tb_building"
              sequence="1"/>
</odoo>
