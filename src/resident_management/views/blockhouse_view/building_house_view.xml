<odoo>
    <record id="view_tb_building_house_tree" model="ir.ui.view">
        <field name="name">tb_building_house.tree</field>
        <field name="model">tb_building_house</field>
        <field name="arch" type="xml">
            <tree string="Bảng căn hộ">
                <field name="name" optional="show"/>
                <field name="code" optional="show"/>
                <field name="address" optional="show"/>
                <field name="house_type" optional="show"/>
                <field name="owner" widget="many2one_avatar_user" optional="show"/>
                <field name="building_floors_id" widget="badge" optional="show"/>
                <field name="building_id" widget="badge" optional="show"/>
                <field name="blockhouse_id" widget="badge" optional="show"/>
                <field name="is_active" widget="boolean_toggle" optional="show"/>
            </tree>
        </field>
    </record>

    <record id="view_tb_building_house_form" model="ir.ui.view">
        <field name="name">tb_building_house.form</field>
        <field name="model">tb_building_house</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="code"/>
                        <field name="name"/>
                        <field name="address"/>
                        <field name="house_type" widget="selection_badge"/>
                        <field name="owner" widget="many2one_avatar_user"/>
                        <field name="building_floors_id"/>
                        <field name="building_id"/>
                        <field name="blockhouse_id"/>
                        <field name="is_active" widget="boolean_toggle"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_tb_building_house_search">
        <field name="name">tb_building_house.search</field>
        <field name="model">tb_building_house</field>
        <field name="arch" type="xml">
            <search>
                <filter name="name" string="Số nhà"/>
                <group expand="1" string="Group By">
                    <filter name="group_block_house" string="Khối nhà" context="{'group_by':'blockhouse_id'}"/>
                    <filter name="group_building" string="Tòa nhà" context="{'group_by':'building_id'}"/>
                    <filter name="group_floors" string="Tầng sàn" context="{'group_by':'building_floors_id'}"/>
                    <filter name="group_owner" string="User" context="{'group_by':'owner'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_tb_building_house" model="ir.actions.act_window">
        <field name="name">Quản lý căn hộ</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">tb_building_house</field>
        <field name="view_mode">tree,form</field>
        <field name="context">
            {'search_default_group_block_house':1,'search_default_group_building':1,'search_default_group_floors':1}
        </field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Thêm mới căn hộ!</p>
        </field>
    </record>

    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="menu_tb_building_house"
              name="Căn hộ"
              parent="menu_blockhouse"
              action="action_tb_building_house"
              sequence="3"/>
</odoo>
