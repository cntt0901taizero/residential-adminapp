<odoo>
    <record id="view_tb_blockhouse_tree" model="ir.ui.view">
        <field name="name">tb_blockhouse.tree</field>
        <field name="model">tb_blockhouse</field>
        <field name="arch" type="xml">
            <tree string="Bảng khối nhà" multi_edit="1">
                <field name="image" widget="image" width="100px" optional="show"/>
                <field name="name" optional="show"/>
                <field name="code" optional="show"/>
                <field name="address" optional="show"/>
                <field name="website" widget="url" optional="show"/>
                <field name="phone" widget="phone" optional="show"/>
                <field name="building_ids" invisible="1">
                    <tree>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="building_level"/>
                        <field name="floors_above_ground_number"/>
                        <field name="floors_below_ground_number"/>
                        <field name="website"/>
                        <field name="image"/>
                        <field name="address"/>
                        <field name="location_link"/>
                    </tree>
                </field>
                <field name="is_active" widget="boolean_toggle" optional="show"/>
            </tree>
        </field>
    </record>

    <record id="view_tb_blockhouse_form" model="ir.ui.view">
        <field name="name">tb_blockhouse.form</field>
        <field name="model">tb_blockhouse</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="image" string="Ảnh đại diện" height="400px" widget="image" class="oe_left oe_avatar"/>
                    </group>
                    <group string="Thông tin cơ bản">
                        <field name="name"/>
                        <field name="code"/>
                        <field name="is_active" widget="boolean_toggle"/>
                    </group>
                    <group string="Thông tin địa chỉ liên hệ">
                        <field name="address" widget="text"/>
                        <field name="phone" widget="phone" placeholder="e.g. +1 415 555 0100"/>
                        <field name="website" widget="CopyClipboardChar" placeholder="e.g. /page"/>
                        <field name="location_link" widget="CopyClipboardChar" placeholder="e.g. /page"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_tb_blockhouse_search">
        <field name="name">tb_blockhouse.search</field>
        <field name="model">tb_blockhouse</field>
        <field name="arch" type="xml">
            <search>
                <filter name="name" string="Tên khối nhà"/>
                <filter name="code" string="Mã khối nhà"/>
            </search>
        </field>
    </record>

    <record id="action_tb_blockhouse" model="ir.actions.act_window">
        <field name="name">Quản lý khối nhà</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">tb_blockhouse</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Thêm mới khối nhà!</p>
        </field>
    </record>

    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="menu_tb_blockhouse"
              name="Khối nhà"
              parent="menu_blockhouse"
              action="action_tb_blockhouse"
              sequence="0"/>
</odoo>
