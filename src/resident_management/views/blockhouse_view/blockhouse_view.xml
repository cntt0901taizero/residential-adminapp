<odoo>
    <record id="view_tb_blockhouse_tree" model="ir.ui.view">
        <field name="name">tb_blockhouse.tree</field>
        <field name="model">tb_blockhouse</field>
        <field name="arch" type="xml">
            <tree>
                <field name="image" widget="image" width="100px"></field>
                <field name="name"></field>
                <field name="code"></field>
                <field name="address"></field>
                <field name="website"></field>
                <field name="phone"></field>
                <field name="is_active"></field>
            </tree>
        </field>
    </record>

    <record id="view_tb_blockhouse_form" model="ir.ui.view">
        <field name="name">tb_blockhouse.form</field>
        <field name="model">tb_blockhouse</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="code"></field>
                        <field name="name"></field>
                        <field name="website"></field>
                        <field name="phone"></field>
                        <field name="image" height="400px" widget="image" class="oe_left oe_avatar"/>
                        <field name="location_link"></field>
                        <field name="address" widget="text"></field>
                        <field name="is_active" widget="boolean_toggle"></field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_tb_blockhouse_search">
        <field name="name">tb_blockhouse.search</field>
        <field name="model">tb_blockhouse</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Tên khối nhà"></field>
                <field name="code" string="Mã khối nhà"></field>

            </search>
        </field>
    </record>

    <record id="action_tb_blockhouse" model="ir.actions.act_window">
        <field name="name">Khối nhà</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">tb_blockhouse</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Thêm mới khối nhà!</p>
        </field>
    </record>

    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="menu_tb_blockhouse"
              name="Khối nhà"
              parent="menu_blockhouse"
              action="action_tb_blockhouse"
              sequence="0"/>
</odoo>
