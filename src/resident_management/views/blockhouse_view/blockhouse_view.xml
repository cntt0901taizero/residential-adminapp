<odoo>
    <record id="view_tb_blockhouse_tree" model="ir.ui.view">
        <field name="name">tb_blockhouse.tree</field>
        <field name="model">tb_blockhouse</field>
        <field name="arch" type="xml">
            <tree>
                <field name="image" widget="image" width="100px"/>
                <field name="name"/>
                <field name="code"/>
                <field name="address"/>
                <field name="website"/>
                <field name="phone"/>
                <field name="is_active"/>

<!--                <field name="building_id" widget="one2many">-->
<!--                    <tree>-->
<!--                        <field name="name" />-->
<!--                        <field name="code"/>-->
<!--                        <field name="total_floors"/>-->
<!--                        <field name="founding_date" widget="date"/>-->
<!--                        <field name="website"/>-->
<!--                        <field name="phone"/>-->
<!--                        <field name="image" width="100px" widget="image" class="oe_left oe_avatar"/>-->
<!--                        <field name="address"/>-->
<!--                    </tree>-->
<!--                </field>-->
            </tree>
        </field>
    </record>

    <record id="view_tb_blockhouse_form" model="ir.ui.view">
        <field name="name">tb_blockhouse.form</field>
        <field name="model">tb_blockhouse</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="website"/>
                        <field name="phone"/>
                        <field name="address" widget="text"/>
                        <field name="image" height="400px" widget="image" class="oe_left oe_avatar"/>
                        <field name="location_link"/>
                        <field name="is_active" widget="boolean_toggle"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_tb_blockhouse_search">
        <field name="name">tb_blockhouse.search</field>
        <field name="model">tb_blockhouse</field>
        <field name="arch" type="xml">
            <search>
                <filter name="name" string="Tên khối nhà"/>
                <filter name="code" string="Mã khối nhà"/>
            </search>
        </field>
    </record>

    <record id="action_tb_blockhouse" model="ir.actions.act_window">
        <field name="name">Quản lý khối nhà</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">tb_blockhouse</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Thêm mới khối nhà!</p>
        </field>
    </record>

    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="menu_tb_blockhouse"
              name="Khối nhà"
              parent="menu_blockhouse"
              action="action_tb_blockhouse"
              sequence="0"/>
</odoo>
