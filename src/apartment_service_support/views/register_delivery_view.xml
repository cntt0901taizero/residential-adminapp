<odoo>
    <record id="view_tb_register_delivery_tree" model="ir.ui.view">
        <field name="name">tb_register_delivery.tree</field>
        <field name="model">tb_register_delivery</field>
        <field name="arch" type="xml">
            <tree string="Bảng quản lý đăng ký vận chuyển đồ">
                <field name="shipping_method" optional="show"/>
                <field name="through_method" optional="show"/>
                <field name="time_start" optional="show"/>
                <field name="time_end" optional="show"/>
                <field name="freight_detail" optional="show"/>
                <field name="use_freight_elevator" optional="show"/>
                <field name="status" optional="show"/>
                <field name="blockhouse_id" optional="show"/>
                <field name="building_id" optional="show"/>
                <field name="building_house_id" optional="show"/>
                <button groups="resident_management.group_administration, resident_management.group_management"
                        name="open_edit_form" class="btn btn-light" title="Sửa" type="object" icon="fa-pencil"/>
                <button groups="resident_management.group_administration, resident_management.group_management"
                        name="confirm_delete" class="btn btn-danger" title="Xóa" type="object" icon="fa-trash-o"/>
            </tree>
        </field>
    </record>

    <record id="view_tb_register_delivery_form" model="ir.ui.view">
        <field name="name">tb_register_delivery.form</field>
        <field name="model">tb_register_delivery</field>
        <field name="arch" type="xml">
            <form create="false">
                <sheet>
                    <group>
                        <field name="shipping_method"/>
                        <field name="through_method"/>
                        <field name="time_start"/>
                        <field name="time_end"/>
                        <field name="freight_detail"/>
                        <field name="use_freight_elevator"/>
                        <field name="status"/>
                        <field name="blockhouse_id"
                               options="{'no_create_edit': True, 'no_create': True, 'no_open': True}"/>
                        <field name="building_id"
                               options="{'no_create_edit': True, 'no_create': True, 'no_open': True}"/>
                        <field name="building_house_id"
                               options="{'no_create_edit': True, 'no_create': True, 'no_open': True}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_tb_register_delivery_search">
        <field name="name">tb_register_delivery.search</field>
        <field name="model">tb_register_delivery</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter name="group_block_house" string="dự án" context="{'group_by': 'blockhouse_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_tb_register_delivery" model="ir.actions.act_window">
        <field name="name">Quản lý đăng ký vận chuyển đồ</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">tb_register_delivery</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_group_block_house':1}</field>
        <field name="limit">10</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Thêm mới!</p>
        </field>
    </record>

     <menuitem id="menu_register_delivery"
              name="Đăng ký vận chuyển đồ"
              action="action_tb_register_delivery"
              parent="menu_apartment_service_support"
              sequence="8"/>

</odoo>
