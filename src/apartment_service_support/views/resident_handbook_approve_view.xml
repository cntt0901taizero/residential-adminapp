<odoo>
    <record id="view_tb_resident_handbook_approve_tree" model="ir.ui.view">
        <field name="name">tb_resident_handbook.approve.tree</field>
        <field name="model">tb_resident_handbook</field>
        <field name="arch" type="xml">
            <tree string="Bảng cẩm nang cư dân" js_class="tree_action_handbook" expand="1">
                <header>
                    <button class="fa fa-check btn btn-info" confirm="Remove this attachment?"
                            name="set_status_active" string=" Phê duyệt" type="object"/>
                    <!--                    <button class="fa fa-times btn btn-warning" confirm="Remove this attachment?"-->
                    <!--                            name="set_status_reject" string=" Từ chối duyệt" type="object"/>-->
                </header>
                <field name="name" optional="show"/>
                <field name="description" optional="show"/>
                <field name="detail_description" optional="show"/>
                <field name="is_active" optional="show"/>
                <button groups="resident_management.group_administration, resident_management.group_management, base.group_erp_manager"
                        name="open_edit_approve_form" class="btn btn-light" title="Sửa" type="object" icon="fa-pencil"/>
                <button groups="resident_management.group_administration, resident_management.group_management, base.group_erp_manager"
                        name="confirm_delete" class="btn btn-danger" title="Xóa" type="object" icon="fa-trash-o"/>
            </tree>
        </field>
    </record>

    <record id="view_tb_resident_handbook_approve_form" model="ir.ui.view">
        <field name="name">tb_resident_handbook.approve.form</field>
        <field name="model">tb_resident_handbook</field>
        <field name="arch" type="xml">
            <form create="false" js_class="form_action_handbook">
                <field name="id" invisible="1"/>
                <field name="status" invisible="1"/>
                <header attrs="{'invisible':[('id','=',False)]}">
                    <button class="fa fa-check btn btn-info"
                            name="set_status_active" string=" Phê duyệt" type="object"
                            attrs="{'invisible':[('status','=','ACTIVE')]}"/>
                    <button class="fa fa-times btn btn-warning"
                            name="set_status_reject" string=" Từ chối duyệt" type="object"
                            attrs="{'invisible':[('status','=','REJECT')]}"/>
                    <field name="status" widget="statusbar"/>
                </header>
                <sheet>
                    <group string="Thông tin khu vực">
                        <div class="row">
                            <div class="col-md-6">
                                <group>
                                    <field name="blockhouse_id"
                                           options="{'no_create_edit': True, 'no_create': True, 'no_open': True}"/>
                                </group>
                            </div>
                            <div class="col-md-6">
                                <group>
                                    <field name="building_id"
                                           options="{'no_create_edit': True, 'no_create': True, 'no_open': True}"/>
                                </group>
                            </div>
                        </div>
                    </group>
                    <group string="Thông tin nội dung cẩm nang">
                        <div class="row">
                            <div class="col-md-12">
                                <group>
                                    <field name="name" required="1"/>
                                </group>
                            </div>
                            <div class="col-md-12">
                                <group>
                                    <field name="description"/>
                                </group>
                            </div>
                            <div class="col-md-12">
                                <group>
                                    <field name="detail_description"/>
                                </group>
                            </div>
                            <div class="col-md-12">
                                <group>
                                    <field name="is_active" readonly="1"/>
                                </group>
                            </div>
                        </div>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_tb_resident_handbook_approve_search">
        <field name="name">tb_resident_handbook.approve.search</field>
        <field name="model">tb_resident_handbook</field>
        <field name="arch" type="xml">
            <search>
                <filter name="is_active" string="Trạng thái active" domain="[('is_active', '=', 'True')]"/>
                <group expand="1" string="Group By">
                    <filter name="group_status" string="Trạng thái" context="{'group_by':'status'}"/>
                    <filter name="group_block_house" string="Dự án" context="{'group_by': 'blockhouse_id'}"/>
                    <filter name="group_building" string="Tòa nhà" context="{'group_by': 'building_id'}"/>
                    <filter name="group_name" string="Chủ đề" context="{'group_by': 'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_tb_resident_handbook_approve" model="ir.actions.act_window">
        <field name="name">PHÊ DUYỆT CẨM NANG</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">tb_resident_handbook</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('view_tb_resident_handbook_approve_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('view_tb_resident_handbook_approve_form')})]"
        />
        <field name="context">
            {'search_default_group_status':1,'search_default_group_block_house':1,'search_default_group_building':1,'search_default_group_name':1}
        </field>
        <field name="limit">10</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Thêm mới!</p>
        </field>
    </record>

    <menuitem id="menu_resident_handbook_approve"
              name="Phê duyệt cẩm nang"
              action="action_tb_resident_handbook_approve"
              parent="menu_resident_handbook_root"
              sequence="2"/>

</odoo>
