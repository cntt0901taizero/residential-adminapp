<odoo>
    <record id="view_tb_complain_approve_tree" model="ir.ui.view">
        <field name="name">tb_complain.approve.tree</field>
        <field name="model">tb_complain</field>
        <field name="arch" type="xml">
            <tree string="Bảng quản lý khiếu nại" js_class="tree_action_complain" create="0" expand="1">
                <header>
                    <button class="fa fa-check btn btn-info" confirm="Remove this attachment?"
                            name="set_status_active" string=" Phê duyệt" type="object"/>
<!--                    <button class="fa fa-times btn btn-warning" confirm="Remove this attachment?"-->
<!--                            name="set_status_reject" string=" Từ chối duyệt" type="object"/>-->
                </header>
                <field name="name" string="TIÊU ĐỀ" optional="show"/>
                <field name="user_id" string="NGƯỜI KHIẾU NẠI" optional="show"/>
                <field name="blockhouse_id" string="DỰ ÁN" optional="show"/>
                <field name="building_id" string="TÒA NHÀ" optional="show"/>
                <field name="status" string="TRẠNG THÁI" widget="label_selection" optional="show"
                       options="{'classes': {'PENDING': 'info', 'ACTIVE': 'success', 'REJECT':'warning'}}"/>
                <field name="create_date" string="NGÀY TẠO" optional="show"/>
                <button groups="resident_management.group_administration, resident_management.group_management, base.group_erp_manager"
                        name="open_edit_approve_form" class="btn btn-light" title="Sửa" type="object" icon="fa-pencil"/>
                <button groups="resident_management.group_administration, resident_management.group_management, base.group_erp_manager"
                        name="confirm_delete" class="btn btn-danger" title="Xóa" type="object" icon="fa-trash-o"/>
            </tree>
        </field>
    </record>

    <record id="view_tb_complain_approve_form" model="ir.ui.view">
        <field name="name">tb_complain.approve.form</field>
        <field name="model">tb_complain</field>
        <field name="arch" type="xml">
            <form create="0" js_class="form_action_complain">
                <field name="id" invisible="1"/>
                <field name="status" invisible="1"/>
                <header attrs="{'invisible':[('id','=',False)]}">
                    <button class="fa fa-check btn btn-info"
                            name="set_status_active" string=" Phê duyệt" type="object"
                            attrs="{'invisible':[('status','=','ACTIVE')]}"/>
                    <button class="fa fa-times btn btn-warning"
                            name="set_status_reject" string=" Từ chối duyệt" type="object"
                            attrs="{'invisible':[('status','=','REJECT')]}"/>
                    <field name="status" widget="statusbar"/>
                </header>
                <sheet>
                    <field name="id" invisible="1"/>
                    <group string="Thông tin người khiếu nại">
                        <div class="row">
                            <div class="col-md-6">
                                <group>
                                    <field name="blockhouse_id" required="1" string="Dự án *"
                                           options="{'no_create_edit': True, 'no_create': True, 'no_open': True}"/>
                                </group>
                            </div>
                            <div class="col-md-6">
                                <group>
                                    <field name="building_id" required="1" string="Tòa nhà *"
                                           options="{'no_create_edit': True, 'no_create': True, 'no_open': True}"/>
                                </group>
                            </div>
                            <div class="col-md-6">
                                <group>
                                    <field name="building_house_id" required="1" string="Căn hộ *"
                                           options="{'no_create_edit': True, 'no_create': True, 'no_open': True}"/>
                                </group>
                            </div>
                            <div class="col-md-6">
                                <group>
                                    <field name="user_id" required="1" string="Người khiếu nại *"
                                           options="{'no_create_edit': True, 'no_create': True, 'no_open': True}"/>
                                </group>
                            </div>
                        </div>
                    </group>
                    <group string="Thông tin nội dung khiếu nại">
                        <div class="row">
                            <div class="col-md-12">
                                <group>
                                    <field name="image" string="Ảnh đại diện" height="400px" widget="image"
                                        class="oe_left oe_avatar"/>
                                </group>
                            </div>
                            <div class="col-md-12">
                                <group>
                                    <field name="file" filename="file_name" widget='binary'/>
                                </group>
                            </div>
                            <div class="col-md-12">
                                <group>
                                    <field name="name" string="Tiêu đề *" required="1"/>
                                </group>
                            </div>
                            <div class="col-md-12">
                                <group>
                                    <field name="content"/>
                                </group>
                            </div>
                            <div class="col-md-12">
                                <group>
                                    <field name="status_description"/>
                                </group>
                            </div>
                        </div>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_tb_complain_approve_search">
        <field name="name">tb_complain.approve.search</field>
        <field name="model">tb_complain</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <separator/>
                <filter name="status_pending" string="Trạng thái chờ" domain="[('status', '=', 'PENDING')]"/>
                <filter name="status_active" string="Trạng thái đã duyệt" domain="[('status', '=', 'ACTIVE')]"/>
                <filter name="status_reject" string="Trạng thái bị từ chối" domain="[('status', '=', 'REJECT')]"/>
                <group expand="1" string="Group By">
                    <filter name="group_block_house" string="Dự án" context="{'group_by':'blockhouse_id'}"/>
                    <filter name="group_status" string="Trạng thái" context="{'group_by':'status'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_tb_complain_approve" model="ir.actions.act_window">
        <field name="name">PHÊ DUYỆT KHIẾU NẠI</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">tb_complain</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_tb_complain_approve_search"/>
        <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('view_tb_complain_approve_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('view_tb_complain_approve_form')})]"
        />
        <field name="context">
            {'search_default_group_block_house':1,'search_default_group_status':1,'search_default_status_pending':1}
        </field>
        <field name="limit">10</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Chưa có bản ghi nào!</p>
        </field>
    </record>

    <menuitem id="menu_complain_approve"
          name="Phê duyệt khiếu nại"
          parent="menu_complain_root"
          action="action_tb_complain_approve"
          sequence="2"/>

</odoo>
