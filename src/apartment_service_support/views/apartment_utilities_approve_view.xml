<odoo>
    <record id="view_tb_apartment_utilities_approve_tree" model="ir.ui.view">
        <field name="name">tb_apartment_utilities.approve.tree</field>
        <field name="model">tb_apartment_utilities</field>
        <field name="arch" type="xml">
            <tree string="Bảng quản lý tiện ích chung cư" js_class="tree_action_utilities" expand="1">
                <header>
                    <button class="fa fa-check btn btn-info" confirm="Remove this attachment?"
                            name="set_status_active" string=" Phê duyệt" type="object"/>
<!--                    <button class="fa fa-times btn btn-warning" confirm="Remove this attachment?"-->
<!--                            name="set_status_reject" string=" Từ chối duyệt" type="object"/>-->
                </header>
                <field name="image" width="100px" widget="image" class="oe_left oe_avatar" optional="show"/>
                <field name="name" optional="show"/>
                <field name="description" optional="show"/>
<!--                <field name="active_days" optional="show"/>-->
<!--                <field name="active_time" widget="date" optional="show"/>-->
                <field name="is_active" optional="show"/>
                <field name="blockhouse_id" optional="show"/>
                <field name="status" widget="label_selection" optional="show"
                       options="{'classes': {'PENDING': 'info', 'ACTIVE': 'success', 'REJECT':'warning'}}"/>
                <button groups="resident_management.group_administration, resident_management.group_management, base.group_erp_manager"
                        name="open_edit_approve_form" class="btn btn-light" title="Sửa" type="object" icon="fa-pencil"/>
                <button groups="resident_management.group_administration, resident_management.group_management, base.group_erp_manager"
                        name="confirm_delete" class="btn btn-danger" title="Xóa" type="object" icon="fa-trash-o"/>
                <groupby name="blockhouse_id">
                    <button name="create_apartment_utilities" string=" Thêm tiện ích"
                            class="fa fa-plus btn btn-primary" type="object"/>
                </groupby>
            </tree>
        </field>
    </record>

    <record id="view_tb_apartment_utilities_approve_form" model="ir.ui.view">
        <field name="name">tb_apartment_utilities.approve.form</field>
        <field name="model">tb_apartment_utilities</field>
        <field name="arch" type="xml">
            <form create="false" js_class="form_action_utilities">
                <field name="id" invisible="1"/>
                <field name="status" invisible="1"/>
                <header attrs="{'invisible':[('id','=',False)]}">
                    <button class="fa fa-check btn btn-info"
                            name="set_status_active" string=" Phê duyệt" type="object"
                            attrs="{'invisible':[('status','=','ACTIVE')]}"/>
                    <button class="fa fa-times btn btn-warning"
                            name="set_status_reject" string=" Từ chối duyệt" type="object"
                            attrs="{'invisible':[('status','=','REJECT')]}"/>
                    <field name="status" widget="statusbar"/>
                </header>
                <sheet>
                    <field name="id" invisible="1"/>
                    <div class="row">
                        <div class="col-md-12">
                            <group>
                                <field string="Ảnh" name="image"
                                       height="400px" widget="image" class="oe_left oe_avatar"/>
                            </group>
                        </div>
                        <div class="col-md-12">
                            <group>
                                <field name="name" required="1"/>
                            </group>
                        </div>
                        <div class="col-md-12">
                            <group>
                                <field name="description"/>
                            </group>
                        </div>
                        <div class="col-md-12">
                            <group>
                                <field name="detail_description"/>
                            </group>
                        </div>
                        <div class="col-md-12">
                            <group>
                                <field name="blockhouse_id" required="1" options="{'no_open': True}"/>
                            </group>
                        </div>
                        <div class="col-md-12">
                            <group>
                                <field name="is_active"/>
                            </group>
                        </div>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_tb_apartment_utilities_approve_search">
        <field name="name">tb_apartment_utilities.approve.search</field>
        <field name="model">tb_apartment_utilities</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter name="group_block_house" string="Dự án" context="{'group_by':'blockhouse_id'}"/>
                    <filter name="group_status" string="Trạng thái" context="{'group_by':'status'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_tb_apartment_utilities_approve" model="ir.actions.act_window">
        <field name="name">PHÊ DUYỆT TIỆN ÍCH CƯ DÂN</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">tb_apartment_utilities</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('view_tb_apartment_utilities_approve_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('view_tb_apartment_utilities_approve_form')})]"
        />
        <field name="context">{'search_default_group_block_house':1,'search_default_group_status':1}</field>
        <field name="limit">10</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Chưa có bản ghi nào!</p>
        </field>
    </record>
    
    <menuitem id="menu_utilities_approve"
              name="Phê duyệt tiện ích cư dân"
              parent="menu_utilities_root"
              action="action_tb_apartment_utilities_approve"
              sequence="2"/>

</odoo>
