<odoo>
    <record id="view_tb_access_card_tree" model="ir.ui.view">
        <field name="name">tb_access_card.tree</field>
        <field name="model">tb_access_card</field>
        <field name="arch" type="xml">
            <tree string="Bảng quản lý thẻ ra vào">
                <field name="name" optional="show"/>
                <field name="user_id" optional="show"/>
                <field name="blockhouse_id" optional="show"/>
                <field name="building_id" optional="show"/>
                <field name="building_house_id" optional="show"/>
                <field name="relationship_type" optional="show"/>
                <field name="status" optional="show"/>
                <button groups="resident_management.group_administration, resident_management.group_management"
                        name="open_edit_form" class="btn btn-light" title="Sửa" type="object" icon="fa-pencil"/>
                <button groups="resident_management.group_administration, resident_management.group_management"
                        name="confirm_delete" class="btn btn-danger" title="Xóa" type="object" icon="fa-trash-o"/>
            </tree>
        </field>
    </record>

    <record id="view_tb_access_card_form" model="ir.ui.view">
        <field name="name">tb_access_card.form</field>
        <field name="model">tb_access_card</field>
        <field name="arch" type="xml">
            <form create="false">
                <sheet>
                    <group string="Thông tin nơi đăng ký">
                        <field name="blockhouse_id"
                               options="{'no_create_edit': True, 'no_create': True, 'no_open': True}"/>
                        <field name="building_id"
                               options="{'no_create_edit': True, 'no_create': True, 'no_open': True}"/>
                        <field name="building_house_id"
                               options="{'no_create_edit': True, 'no_create': True, 'no_open': True}"/>
                    </group>
                    <group string="Thông tin thẻ">
                        <field name="name"/>
                        <field name="user_id"
                               options="{'no_create_edit': True, 'no_create': True, 'no_open': True}"/>
                        <field name="relationship_type"/>
                        <field name="status"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_tb_access_card_search">
        <field name="name">tb_access_card.search</field>
        <field name="model">tb_access_card</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter name="group_block_house" string="dự án" context="{'group_by': 'blockhouse_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_tb_access_card" model="ir.actions.act_window">
        <field name="name">Quản lý đăng ký thẻ ra vào</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">tb_access_card</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_group_block_house':1}</field>
        <field name="limit">10</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Thêm mới!</p>
        </field>
    </record>

     <menuitem id="menu_access_card"
              name="Đăng ký thẻ ra vào"
              action="action_tb_access_card"
              parent="menu_apartment_service_support"
              sequence="8"/>

</odoo>
