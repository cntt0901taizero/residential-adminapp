<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_tb_news_approve_tree" model="ir.ui.view">
        <field name="name">tb_news.approve.tree</field>
        <field name="model">tb_news</field>
        <field name="arch" type="xml">
            <tree create="0" edit="0">
                <field name="create_uid" string="Người tạo"/>
                <field name="name" decoration-bf="1"/>
                <field name="news_description" decoration-bf="1"/>
                <field name="create_date" widget="date" class="oe_inline"/>
                <field name="status" widget="label_selection"/>
                <!--                <button name="confirm_delete_news" class="fa fa-trash-o fa-lg float-right btn btn-danger"-->
                <!--                        title="Xóa"-->
                <!--                        aria-label="Xóa" type="object"/>-->
                <!--                <button name="open_edit_form_news" class="fa fa-pencil fa-lg float-right btn btn-success"-->
                <!--                        title="Sửa" aria-label="Sửa" type="object"/>-->
            </tree>
        </field>
    </record>

    <record id="view_tb_news_approve_form" model="ir.ui.view">
        <field name="name">tb_news.form</field>
        <field name="model">tb_news</field>
        <field name="arch" type="xml">
            <form create="0" js_class="form_action_news">
                <header>
                    <button icon="fa-check" class="oe_highlight"
                            status="DRAFT, REJECT"
                            name="set_status_active" string="Phê duyệt" type="object"
                            attrs="{'invisible':[('id','=',False)]}"
                    />
                    <button icon="fa-times"
                            attrs="{'invisible':[('id','=',False)]}"
                            name="set_status_reject" string="Từ chối duyệt" type="object" status="DRAFT, ACTIVE"/>
                    <field name="status" widget="statusbar" />
                </header>
                <sheet>
                    <group class="row">
                        <group class="col-md-6">
                            <field name="name" class="text-truncate"/>
                        </group>
                        <group class="col-md-6">
                            <field name="image" string="Ảnh" readonly="0" widget="image" class="oe_left oe_avatar"/>
                        </group>
                        <group class="col-md-6">
                            <field name="news_description"/>
                        </group>
                        <group class="col-md-6">
                            <field name="file" filename="file_name" widget='binary'/>
                        </group>
                        <group class="col-md-6">
                            <field name="file_name"/>
                        </group>
                        <group class="col-md-4">
                            <field name="news_type" widget="radio"/>
                        </group>
                        <group class="col-md-6">
                                <field name="blockhouse_id" attrs="{'required': True}"
                                       options="{'no_quick_create':True,'no_create': True, 'no_edit': True, 'no_open': True}"/>

                        </group>
                        <group class="col-md-6">
                            <field name="building_id"
                                       attrs="{'required': [('news_type','!=','PROJECT_APARTMENT')], 'invisible':[('news_type','=','PROJECT_APARTMENT')]}"
                                       options="{'no_quick_create':True,'no_create': True, 'no_edit': True, 'no_open': True}"
                                />
                        </group>
                        <group class="w-100">
                            <field name="content" options="{'collaborative':true}"
                                   widget="html"
                                   placeholder="Nhập vào nội dung chi tiết bản tin">
                            </field>
                        </group>
                    </group>

                </sheet>

            </form>
        </field>
    </record>


    <record id="action_tb_news_approve" model="ir.actions.act_window">
        <field name="name">Duyệt tin tức</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">tb_news</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('view_tb_news_approve_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('view_tb_news_approve_form')})]"
        />
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Tạo bản ghi đầu tiên của bạn</p>
        </field>
    </record>

    <menuitem id="menu_news_approve"
              name="Phê duyệt tin tức"
              parent="menu_news_root"
              action="action_tb_news_approve"
              sequence="2"/>
</odoo>

